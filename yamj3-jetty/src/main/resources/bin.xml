<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>

    <formats>
        <format>${distribution.format}</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!--Add the jar itself -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>${project.artifactId}*.jar</include>
            </includes>
        </fileSet>

        <!-- add jar dependencies -->
        <fileSet>
            <directory>${project.build.directory}/dependencies</directory>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude></exclude>
            </excludes>
        </fileSet>

        <!-- add configuration files -->
        <fileSet>
            <directory>${basedir}/config</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>*.properties</exclude>
                <exclude>*.html</exclude>
            </excludes>
        </fileSet>

        <!-- add properties files -->
        <fileSet>
            <directory>${basedir}/config</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>

        <!--Add the version -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>version.txt</include>
                <include>jetty.cmd</include>
            </includes>
        </fileSet>

    </fileSets>

    <files>
        <!-- Create the resource directory -->
        <file>
            <source>${basedir}/config/resources-yamj.html</source>
            <outputDirectory>resources</outputDirectory>
            <destName>yamj3.html</destName>
        </file>
        <!-- Create the skins directory -->
        <file>
            <source>${basedir}/config/skins-yamj.html</source>
            <outputDirectory>skins</outputDirectory>
            <destName>skins.html</destName>
        </file>
        <file>
            <source>${basedir}/config/skins-readme.txt</source>
            <outputDirectory>skins</outputDirectory>
            <destName>readme.txt</destName>
        </file>
    </files>

    <moduleSets>
        <moduleSet>
            <binaries>
                <!-- useStrictFiltering>true</useStrictFiltering -->
                <includeDependencies>true</includeDependencies>
                <outputDirectory>lib</outputDirectory>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>
