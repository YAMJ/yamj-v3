<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
">

    <bean name="/PingService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="pingService"/>
        <property name="serviceInterface" value="com.yamj.common.remote.service.PingService"/>
    </bean>

    <bean name="/FileImportService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="fileImportService"/>
        <property name="serviceInterface" value="com.yamj.common.remote.service.FileImportService"/>
    </bean>

    <bean name="/GitHubService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="githubService"/>
        <property name="serviceInterface" value="com.yamj.common.remote.service.GitHubService"/>
    </bean>

</beans>